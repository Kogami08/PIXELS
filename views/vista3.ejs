<%- include("templates/headtask.ejs") %>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Pongan el titulo" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="descripcion" cols="80" class="form-control" placeholder="Insertar ina descripcion"></textarea>
                            </div>
                            <button type="submit" class=" btn btn-primary">
                                La neta ya me enoje
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="container">
                    <table class="rwd_auto fontsize">
                      <thead>
                        <tr class="head">
                          <th>ID</th>
                          <th>Titulo</th>
                          <th>descripcion</th>
                          <th>Operacion</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% for (var i = 0; i < tasks.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %> </td>
                                <td><%= tasks[i].title %> </td>
                                <td><%= tasks[i].descripcion %> </td>
                                <td>
                                    <a href="/turn/<%= tasks[i]._id %>" 
                                    class="btn <%= tasks[i].status ? 'btn-success': 'btn-dark' %> "> 
                                    Confirmar</a>
                                    <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger"> Delete</a>
                                    <a href="/edit/<%= tasks[i]._id %> " class="btn btn-info">Edit</a>
                                </td>
                            </tr>
                          <% } %>
                      </tbody>
                    </table>
                  </div>
            </div>
        </div>
    </div>
<%- include("templates/footertask.ejs") %>